<section class="block block-slider">
  <div class="block-slider--slides">   
    {% for image in images %}
      {% if loop.first %}
        <img class="block-slider--item is-active" srcset="{{ image.url }}, {{ image.url2x }} 2x" loading="lazy" alt="{{ image.alt }}" />
      {% else %}
        <img class="block-slider--item" data-srcset="{{ image.url }}, {{ image.url2x }} 2x" alt="{{ image.alt }}" />
      {% endif %}
    {% endfor %}
  </div>
  <div class="block-slider--dots">           
    {% for image in images %}
      {% if loop.first %}
        <span class="block-slider--dot is-active"></span>
      {% else %}
        <span class="block-slider--dot"></span>   
      {% endif %}
    {% endfor %}
  </div>
